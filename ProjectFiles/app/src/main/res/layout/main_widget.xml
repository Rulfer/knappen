<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Knappen.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:backgroundTint="#00FFFFFF"
    android:theme="@style/Theme.Knappen.AppWidgetContainer"
    android:visibility="visible"
    android:padding="5dp"
    tools:visibility="visible">

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.Knappen.AppWidget.InnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="1"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textAlignment="viewEnd"
        android:textColor="@color/light_blue_50"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Example test" />

    <Button
        android:id="@+id/main_button"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Knappen" />

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_button"
        android:rotationX="0"
        android:text="Button"
        android:translationX="0dp" />

</RelativeLayout>